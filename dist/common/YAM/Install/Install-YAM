        ; italian catalog file
        (if (bitand #catalog_lang #def_lang_italian)
            (
                (makedir (tackon #Cat_dir #cat_name_italian))

                (copyfiles
                    (source "/Catalogs/italian")
                    (choices "YAM.catalog")
                    (dest (tackon #Cat_dir #cat_name_italian))
                    (help @copyfiles-help)
                )
            )
        )

