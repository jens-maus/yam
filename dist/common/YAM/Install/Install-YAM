        ; slovak catalog file
        (if (bitand #catalog_lang #def_lang_slovak)
            (
                (makedir (tackon #Cat_dir #cat_name_slovak))

                (copyfiles
                    (source "/Catalogs/slovak")
                    (choices "YAM.catalog")
                    (dest (tackon #Cat_dir #cat_name_slovak))
