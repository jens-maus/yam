            (
                (makedir (tackon #Cat_dir #cat_name_slovenian))

                (copyfiles
                    (source "/Catalogs/slovenian")
                    (choices "YAM.catalog")
                    (dest (tackon #Cat_dir #cat_name_slovenian))
